@model DataStructure.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Director")'">See the genre</button>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scenarist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scenarist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleasedYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleasedYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Award)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Award)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discreption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discreption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoviePoster)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.MoviePoster)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieTrailer)
        </dt>
        <dd class="col-sm-10">
            <video width="320" height="240" controls>
                <source src="@Url.Content(Model.MovieTrailer)" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
